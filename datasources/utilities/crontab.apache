##################################################################################
10   5 * * * perl /usr/local/share/django/pahma_project/uploadmedia/checkRuns.pl jobs /tmp/image_upload_cache_pahma | expand -12 | mail -s "recent PAHMA BMU jobs" jblowe@berkeley.edu > /dev/null 2>&1
